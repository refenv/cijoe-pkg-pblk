descr: Stress testing for pblk
descr_long: |
  Excercise pblk with various workloads, trying to break things
hooks: [ sysinf, dmesg ]

testsuites:
  - name: Lifecycle
    alias: "Lifecycle tests"
    testcases:
      - pblk_lifecycle.sh

  - name: XFS_quick
    hooks: [ pblk ]
    alias: "Quick XFS tests"
    testcases:
      - xfs_quick.sh
  
  - name: GC_stress
    alias: "Garbage collection stress test"
    testcases:
      - pblk_gc_stress.sh

