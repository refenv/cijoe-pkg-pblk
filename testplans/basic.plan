descr: basic pblk testplan, testing basic stuff quickly
descr_long: |
  Run pblk basic sanity checks
hooks: [ sysinf, dmesg ]

testsuites:
  - name: Lifecycle
    alias: "Lifecycle tests"
    testcases:
      - pblk_lifecycle.sh

  - name: XFS_regressions
    hooks: [ pblk ]
    alias: "Check previous regressions"
    testcases:
      - xfs_regressions.sh
  
  - name: GC
    alias: "Garbage collection"
    testcases:
      - pblk_gc_quick.sh

