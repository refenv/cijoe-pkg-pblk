descr: PBLK smoketest -- verifies fundamental operation
descr_long: |
  Verifies PBLK instance lifecycle, basic IO and known regressions. Should take
  about 10 minutes to complete
hooks: [ sysinf, dmesg ]

testsuites:
  - name: Lifecycle
    testcases:
      - pblk_lifecycle.sh

  - name: IO
    hooks: [ pblk ]
    testcases:
      - block_partial_read.sh

  - name: Regressions
    hooks: [ pblk ]
    testcases:
      - xfstests_regressions.sh
